                            <span class="label label-success">
                  {% elseif  oferta.statusTender == 'mbyllur'%}
                  <span class="label label-default">
                  {% elseif  oferta.statusTender == 'inaktiv'%}
                  <span class="label label-danger">
                  {% endif %}
                      {{ oferta.statusTender|upper }} </span>
