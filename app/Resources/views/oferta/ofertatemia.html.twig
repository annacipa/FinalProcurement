                        <td>
{#                            <b>#</b><br>#}
                            {{ oferta.ofertaId }}
                        </td>
                        <td>
{#                            <b>Titulli i tenderit</b><br>#}
                            {{ oferta.titullTender }}
                        </td>
                        <td>
{#                            <b>Fond<br> Limit</b><br>#}
                            {{ oferta.VleraOferte }}
                        </td>
                        <td>
{#                            <b>DatÃ« mbyllje</b><br>#}
                            {{ oferta.dataMbylljeTender }}
                        </td>
                        <td>
{#                            <b>Status</b><br>#}
